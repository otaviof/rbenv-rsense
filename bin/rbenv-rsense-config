#!/usr/bin/env bash
#
# Summary: Reconfigure RSense to follow up rbenv
#
# Usage: rbenv rsense config [--dry-run]
#
# Reconfigure RSense to follow up rbenv current Ruby version.
#

set -e
[ -n "$RBENV_DEBUG" ] && set -x

DRY_RUN=0

if [ ! -z "$2" ]; then
    if [ "$2" = "--dry-run" ]; then
        DRY_RUN=1
    else
        rbenv-help --usage rsense-config >&2
        exit 1
    fi
fi

function exec_rsense_config () {
    command="ruby ${RSENSE_HOME}/libexec/etc/config.rb > ~/.rsense"
    if [ $DRY_RUN -eq 1 ]; then
        cat << EOM
Dry-run:
    $ # $(type ruby)
    $ # $(ruby --version)
    $ ${command}
EOM
        exit
    else
        if ( ruby ${RSENSE_HOME}/libexec/etc/config.rb > ~/.rsense ); then
            [ -n "$RBENV_DEBUG" ] && \
                echo "New RSense configuration is set using '$(ruby --version)'"
        else
            echo "Error setting RSense configuration" >&2
            exit 1
        fi
    fi
}

exec_rsense_config

# EOF
